<div class="yui-g">
	
	<dl class="indexDefList">
		
	    <dt>Collection</dt><dd><%= h document[:collection_facet] %></dd>
		
		<% if document[:date_display] %>
		<dt>Date</dt><dd><%= h document[:date_display] %></dd>
		<% end %>
		
		<% if document[:institution_t] %>
		<dt>Institution</dt><dd><%= h document[:institution_t] %></dd>
		<% end %>
		
		<% if document[:format_facet] %>
			<dt>Format</dt><dd><%= h document[:format_facet].join(", ") %></dd>
		<% end %>
		
		<% if document[:abstract_t] %>
			<dt>Abstract</dt>
			<dd><%= h truncate(document[:abstract_t].join('; '), :length=>170) %></dd>
		<% end %>
		
	</dl>
	
</div>