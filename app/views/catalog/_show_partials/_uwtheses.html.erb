<%# default partial to display solr document fields in catalog show view -%>

<% sidebar_items << capture do %>
	<p><%= link_back_to_catalog :label=>'&lt;&lt; SEARCH' %></p>
    <dt>Subjects</dt>
	<% @document[:subject_facet].each do |subject| %>
		<dd>
			<% subject_array = subject.split(" -- ") %>
			<% subject_array.each_with_index do |s,i| %>
				<% unless i == 0 %> -- <% end %>
				<%= link_to_query(s.strip) %>
			<% end %>
		</dd>
	<% end %>
<% end %>

<dl class="defList">
	
	<% if @document[:author_t] %>
    <dt>Author(s)</dt><dd>
		<% @document[:author_t].each do |d| %>
			<%= d %><br/>
		<% end %></dd>
	<% end %>
	
	<% if @document[:description_t] %>
    <dt>Description</dt><dd>
		<% @document[:description_t].each do |d| %>
			<%= d %><br/>
		<% end %></dd>
	<% end %>
	
    <dt>Collection</dt><dd><%= @document[:collection_facet] %></dd>

	<% if @document[:date_display] %>
	<dt>Issue Date</dt><dd><%= @document[:date_display] %></dd>
	<% end %>
	
	<% if @document[:uri_display] %>
	<dt>URI</dt><dd><a href="<%= @document[:uri_display]%>"><%= @document[:uri_display] %></a></dd>
	<% end %>

	<% if @document[:rights_t] %>
	<dt>Rights</dt><dd><%= @document[:rights_t] %></dd>
	<% end %>


	<%#= @document[:fullimage_display] %>
	

</dl>