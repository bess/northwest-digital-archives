<h2>Editing Bookmark for "<%= link_to @bookmark.title, catalog_path(@bookmark.document_id) %>"</h2>

<% @sidebar = capture do %>
  <%= link_to '<< back to my bookmarks', user_bookmarks_path(current_user) %>
<% end %>

<% form_for @bookmark, :url=>user_bookmark_path(current_user) do |f| %>
	
	<fieldset>
  	
  	<div class="row">
  		<%= f.label :title %>
  		<%= f.text_field :title %>
  	</div>
  	
  	<div class="row">
  		<%= f.label :tags %>
  		<%= f.text_field :tag_list %>
  	</div>
	
  	<div class="row">
  		<%= f.label :notes %>
  		<%= f.text_area :notes, :style=>'width:400px; height:200px;' %>
  	</div>
  	
  	<div class="left">
  	  <%= f.label '' %>
  	  <%= link_to 'Cancel', collection_path %> | <%= submit_tag %>
  	</div>
  	
	</fieldset>
	
<% end %>